<Window x:Class="praktikaDE.Authorization_Folder.Authorization"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:praktikaDE"
        mc:Ignorable="d"
        Title="Авторизация" Height="450" Width="800" MinHeight="450" MinWidth="800" MaxWidth="1280" MaxHeight="720">
    <Viewbox Stretch="Uniform">
        <Grid Height="450" Width="800">
            <Grid.RowDefinitions>
                <RowDefinition Height="70*"/>
                <RowDefinition Height="70*"/>
                <RowDefinition Height="70*"/>
                <RowDefinition Height="80*"/>
            </Grid.RowDefinitions>
            <Label Content="Авторизация" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="25"/>
            <Label Content="Логин"  HorizontalAlignment="Left" Grid.Row="1" VerticalAlignment="Top" FontSize="20" Margin="300,11,0,0"/>
            <Label Content="Пароль" HorizontalAlignment="Left" Grid.Row="2" VerticalAlignment="Top" FontSize="20" Margin="300,11,0,0"/>
            <TextBox x:Name="LoginBox" HorizontalAlignment="Center" Grid.Row="1" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="35" Width="200" Margin="0,47,0,0" />
            <PasswordBox x:Name="PasswordBox" HorizontalAlignment="Center" Grid.Row="2" VerticalAlignment="Top" Height="35" Width="200" Margin="0,47,0,0"/>
            <Button Content="Войти" Width="150" HorizontalAlignment="Center" Grid.Row="4" VerticalAlignment="Center" FontSize="40" Click="Button_Click"/>
        </Grid>
    </Viewbox>
</Window>
